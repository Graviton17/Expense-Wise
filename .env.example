# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/expensewise"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Email Configuration (Optional - for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAIL_FROM="noreply@expensewise.com"

# Redis Configuration (Optional - for caching and sessions)
REDIS_URL="redis://localhost:6379"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="ExpenseWise"
NEXT_PUBLIC_BASE_CURRENCY="USD"

# File Upload Configuration
MAX_FILE_SIZE="5242880" # 5MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/jpg,application/pdf"

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS="true"
ENABLE_OCR_SCANNING="false"
ENABLE_MULTI_CURRENCY="true"

# External Services (Optional)
# AWS S3 for file storage
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# Stripe for payments (if needed)
STRIPE_PUBLIC_KEY=""
STRIPE_SECRET_KEY=""

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=""

# Sentry for error tracking (Optional)
SENTRY_DSN=""

# Development
NODE_ENV="development"
